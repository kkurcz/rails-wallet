<%= simple_form_for (@wallets) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.error[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end  %>
